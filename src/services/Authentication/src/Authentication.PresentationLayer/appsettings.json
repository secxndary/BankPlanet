{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "mssqlConnection": "server=.; database=BankPlanet; Integrated Security=true; TrustServerCertificate=true"
  },
  "JwtSettings": {
    "validIssuer": "BankPlanetAPI",
    "validAudience": "https://localhost:5001",
    "validateLifetime": false,
    "accessExpiresMinutes": 15,
    "refreshExpiresDays": 7
  }
}
